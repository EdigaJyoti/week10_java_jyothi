package com.corenuts.assessment.jan11;

public class DiamondPattern {
	
	public static void main(String[] args) {
		
		int n=5;
		for(int i=1;i<=n*2-1;i++) {
			for(int j=1;j<=n*2-1;j++) {
				if(i<=n) {
					if(j<=n-i+1 || j>=n-1+i) {
						System.out.print(" ");
					}
					else {
						System.out.print("*");
					}
				}
				else {
					if(j<=i-n+1 || j>=2*n+4-i) {
						System.out.print(" ");
					}
					else {
						System.out.print("*");
					}
				}
			}
			System.out.println();
		}
		
	}

}
